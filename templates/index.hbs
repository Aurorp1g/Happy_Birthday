<!doctype html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no">
    <link rel="icon" href="./img/favicon.ico" type="image/x-icon">
    <title>{{title}}</title>
    <link rel="stylesheet" type="text/css" href="css/styles.css">
    <style>
        .iframepage { -webkit-overflow-scrolling: touch; overflow-x: hidden; overflow-y: hidden; }
        ::-webkit-scrollbar { width: 0px; height: 0px; }
        .scroll-el { overflow: auto; }
        #main-iframe { width: 100%; height: 100vh; border: none; display: block; }
        
        /* 加载动画 */
        #loader {
            position: fixed;
            inset: 0;
            background: linear-gradient(135deg, #ee9ca7, #f8c8dc);
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease;
        }
        #loader.hidden { opacity: 0; pointer-events: none; }
        .cake-loader {
            width: 60px; height: 60px;
            border: 4px solid rgba(255,255,255,0.3);
            border-top-color: #fff;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 20px;
        }
        @keyframes spin { to { transform: rotate(360deg); } }
        #loader p { color: #fff; font-family: 'xwwk', sans-serif; font-size: 18px; }
    </style>
</head>
<body>
    <div id="loader">
        <div class="cake-loader"></div>
        <p>正在准备惊喜...</p>
    </div>
    
    <iframe src="./html/login.html" id="main-iframe" onload="hideLoader()"></iframe>
    
    <script>
        function hideLoader() {
            setTimeout(() => {
                document.getElementById('loader').classList.add('hidden');
            }, 800);
        }
        
        // 动态调整iframe高度
        function changeFrameHeight() {
            const iframe = document.getElementById('main-iframe');
            if (iframe) {
                iframe.style.height = window.innerHeight + 'px';
            }
        }
        
        window.addEventListener('resize', changeFrameHeight);
        changeFrameHeight();
    </script>
</body>
</html>